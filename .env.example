# ==============================================================================
# TAOBAO SCRAPER BOT - CONFIGURATION
# ==============================================================================
# Скопируйте этот файл в .env и заполните своими значениями
# cp .env.example .env
# ==============================================================================

# ==============================================================================
# TELEGRAM BOT
# ==============================================================================
# Получите токен у @BotFather в Telegram
BOT_TOKEN=your_telegram_bot_token_here

# ==============================================================================
# YANDEX GPT (для генерации описаний товаров)
# ==============================================================================
# Получите API ключ в Yandex Cloud Console
# https://yandex.cloud/ru/docs/iam/concepts/authorization/api-key
YANDEX_GPT_API_KEY=your_yandex_gpt_api_key_here
# ID каталога в Yandex Cloud
YANDEX_FOLDER_ID=your_yandex_folder_id_here
# Модель YandexGPT (yandexgpt-lite или yandexgpt)
YANDEX_GPT_MODEL=yandexgpt-lite
# Опциональный ID проекта Google Cloud (оставьте пустым, если не нужен)
GOOGLE_CLOUD_PROJECT=

# ==============================================================================
# OPENAI (альтернативный LLM провайдер)
# ==============================================================================
# Получите ключ на https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here
# Варианты моделей: gpt-4o-mini, gpt-4.1-mini, gpt-4o, o4-mini, gpt-5.1, gpt-5-mini, gpt-5-nano
OPENAI_MODEL=gpt-4o-mini

# ==============================================================================
# ВЫБОР LLM-ПРОВАЙДЕРОВ
# ==============================================================================
# Основной провайдер генерации (yandex или openai)
DEFAULT_LLM=yandex
# Провайдер для перевода и агрегирования цен (по умолчанию = DEFAULT_LLM)
TRANSLATE_PROVIDER=openai
# (legacy) переменная для совместимости, можно оставить пустой
TRANSLATE_LLM=
# Модель переводческого LLM (для OpenAI или YandexGPT)
TRANSLATE_MODEL=gpt-4o-mini
# Legacy-поле для OpenAI моделей (можно оставить пустым)
TRANSLATE_OPENAI_MODEL=
# Принудительно использовать старый Yandex Translate вместо LLM (True/False)
TRANSLATE_LEGACY=False

# ==============================================================================
# TMAPI (для парсинга Taobao/Tmall)
# ==============================================================================
# Получите токен на https://tmapi.top
TMAPI_TOKEN=your_tmapi_token_here
# Дополнительный токен для Pinduoduo (если используется)
TMAPI_PINDUODUO_TOKEN=
# Ограничение запросов в секунду (по умолчанию 5)
TMAPI_RATE_LIMIT=5

# ==============================================================================
# EXCHANGE RATE API (для конвертации валют, опционально)
# ==============================================================================
# Получите ключ на https://www.exchangerate-api.com
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here

# ==============================================================================
# ОПЦИИ
# ==============================================================================

# Конвертация валют (True/False)
CONVERT_CURRENCY=False

# Подпись под каждым постом и валюта по умолчанию
DEFAULT_SIGNATURE=@annabbox
DEFAULT_CURRENCY=cny

# ID чата администратора для уведомлений об ошибках (необязательно)
# Чтобы узнать свой chat_id:
# 1. Напишите боту @userinfobot команду /start
# 2. Скопируйте ваш ID
# 3. Вставьте сюда (например: ADMIN_CHAT_ID=123456789)
ADMIN_CHAT_ID=

# Дополнительные админы бота (через запятую, Telegram ID)
# Эти пользователи имеют те же права, что и основной админ, включая /access и Mimi App.
# Пример: ADMIN_GROUP_BOT=111111111,222222222
ADMIN_GROUP_BOT=

# Ник пользователя, к которому можно обратиться по вопросам доступа к боту (без @)
# Используется в сообщениях при отказе доступа (белый/чёрный списки)
ACCESS_SUPPORT_USERNAME=

# Отдельный чат для уведомлений об ошибках TMAPI (например, 439 - недостаточно средств)
TMAPI_BILLING_CHAT_ID=
# Уведомлять ли про ошибку 439 (True/False)
TMAPI_NOTIFY_439=False

# ==============================================================================
# РЕЖИМЫ РАБОТЫ
# ==============================================================================
# DEBUG_MODE - показывать подробные логи в консоли (True/False)
# MOCK_MODE - использовать данные из файлов вместо реальных API запросов (True/False)
#
# Рекомендуемые комбинации:
# Production:   DEBUG_MODE=False, MOCK_MODE=False (реальные запросы, без debug логов)
# Development:  DEBUG_MODE=True,  MOCK_MODE=False (реальные запросы + логи)
# Testing:      DEBUG_MODE=False, MOCK_MODE=True  (файлы, без логов)
# Mock Debug:   DEBUG_MODE=True,  MOCK_MODE=True  (файлы + логи)

DEBUG_MODE=False
MOCK_MODE=False

# Отключить проверку SSL (только если есть проблемы с сертификатами, НЕ рекомендуется!)
DISABLE_SSL_VERIFY=False

# ==============================================================================
# НАСТРОЙКИ PINDUODUO ВЕБ-СКРАПИНГА (опционально)
# ==============================================================================
PDD_USE_COOKIES=True
PDD_USER_AGENT=
PDD_COUNTRY_CODE=
PDD_PHONE_NUMBER=
PDD_LOGIN_MAX_ATTEMPTS=5
PDD_LOGIN_CODE_TIMEOUT_SEC=120
PDD_COOKIES_FILE=src/pdd_cookies.json

# ==============================================================================
# PLAYWRIGHT (опционально для Pinduoduo)
# ==============================================================================
PLAYWRIGHT_PROXY=
PLAYWRIGHT_SLOWMO_MS=100
PLAYWRIGHT_PAGE_TIMEOUT_MS=60000
PLAYWRIGHT_USE_MOBILE=False
PLAYWRIGHT_MOBILE_DEVICE=iPhone 12
PLAYWRIGHT_LOCALE=zh-CN
PLAYWRIGHT_TIMEZONE=Asia/Shanghai
PLAYWRIGHT_KEEP_BROWSER_OPEN=False
