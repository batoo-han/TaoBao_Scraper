# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Получите токен у @BotFather в Telegram
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# =============================================================================
# TMAPI CONFIGURATION
# =============================================================================
# Регистрация: https://tmapi.top
# После регистрации получите API token в личном кабинете
TMAPI_TOKEN=YOUR_TMAPI_TOKEN_HERE

# =============================================================================
# YANDEX CLOUD CONFIGURATION
# =============================================================================
# Получите API ключ и Folder ID в Yandex Cloud Console
# Подробная инструкция: docs/SERVICES_SETUP.md
YANDEX_GPT_API_KEY=YOUR_YANDEX_GPT_API_KEY_HERE
YANDEX_FOLDER_ID=YOUR_YANDEX_FOLDER_ID_HERE
YANDEX_GPT_MODEL=yandexgpt-lite

# =============================================================================
# EXCHANGE RATE API CONFIGURATION
# =============================================================================
# Регистрация: https://www.exchangerate-api.com
# Бесплатный план: 1500 запросов/месяц
EXCHANGE_RATE_API_KEY=YOUR_EXCHANGE_RATE_API_KEY_HERE

# =============================================================================
# GOOGLE CLOUD (опционально, если используется)
# =============================================================================
GOOGLE_CLOUD_PROJECT=YOUR_PROJECT_ID_HERE

# =============================================================================
# APPLICATION OPTIONS
# =============================================================================
# Конвертация валют: True/False
# True - показывать цену в юанях и рублях
# False - показывать только в юанях
CONVERT_CURRENCY=False

# Режим отладки: True/False
# True - использует данные из result.txt (для тестирования без API запросов)
# False - реальные запросы к TMAPI
DEBUG_MODE=False

# Отключить проверку SSL: True/False
# True - отключить проверку SSL (НЕ рекомендуется для продакшена!)
# False - проверять SSL сертификаты
DISABLE_SSL_VERIFY=False

